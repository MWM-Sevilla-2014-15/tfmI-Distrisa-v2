<?xml version="1.0" encoding="UTF-8"?>
<faces-config xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_0.xsd"
              version="2.0">
    <application>
        <resource-bundle>
            <base-name>mensajes</base-name>
            <var>msgs</var>
        </resource-bundle>
        <locale-config>
            <default-locale>es</default-locale>
        </locale-config>
    </application>
    <validator>
        <validator-id>emailValidator</validator-id>
        <validator-class>es.us.master.utils.EmailValidator</validator-class>
    </validator>
    <!-- MENU PUBLICO -->
    <navigation-rule>
        <from-view-id>/pages/index.jsf</from-view-id>
        <navigation-case>
            <from-outcome>LOGIN</from-outcome>
            <to-view-id>/pages/login.jsf</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>REGISTER</from-outcome>
            <to-view-id>/pages/register.jsf</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>SHOWPRODUCTS</from-outcome>
            <to-view-id>/pages/showProducts.jsf</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/pages/login.jsf</from-view-id>
        <navigation-case>
            <from-outcome>CLIENT</from-outcome>
            <to-view-id>/pages/clientZone.jsf</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>ADMIN</from-outcome>
            <to-view-id>/pages/adminZone.jsf</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>ERROR</from-outcome>
            <to-view-id>/pages/login.jsf</to-view-id>
        </navigation-case>
    </navigation-rule>
     <navigation-rule>
        <from-view-id>/pages/register.jsf</from-view-id>
        <navigation-case>
            <from-outcome>OK</from-outcome>
            <to-view-id>/pages/index.jsf</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>ERROR</from-outcome>
            <to-view-id>/pages/register.jsf</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/pages/adminZone.jsf</from-view-id>
        <navigation-case>
            <from-outcome>PRODUCTOS</from-outcome>
            <to-view-id>/pages/manageProducts.jsf</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>PROFILE</from-outcome>
            <to-view-id>/pages/editProfile.jsf</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>LOGOUT</from-outcome>
            <to-view-id>/pages/index.jsf</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>TROLLEY</from-outcome>
            <to-view-id>/pages/trolley.jsf</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>TROLLEYADMIN</from-outcome>
            <to-view-id>/pages/trolleyAdmin.jsf</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/pages/manageProducts.jsf</from-view-id>
        <navigation-case>
            <from-outcome>OK</from-outcome>
            <to-view-id>/pages/adminZone.jsf</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>ERROR</from-outcome>
            <to-view-id>/pages/manageProducts.jsf</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>REMOVE</from-outcome>
            <to-view-id>/pages/manageProducts.jsf</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/pages/clientZone.jsf</from-view-id>
        <navigation-case>
            <from-outcome>SHOP1</from-outcome>
            <to-view-id>/pages/shoptrolley1.jsf</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>PROFILE</from-outcome>
            <to-view-id>/pages/editProfile.jsf</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>LOGOUT</from-outcome>
            <to-view-id>/pages/index.jsf</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/pages/shoptrolley1.jsf</from-view-id>
        <navigation-case>
            <from-outcome>SHOP1</from-outcome>
            <to-view-id>/pages/shoptrolley1.jsf</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>SHOP2</from-outcome>
            <to-view-id>/pages/shoptrolley2.jsf</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>ERROR</from-outcome>
            <to-view-id>/pages/shoptrolley1.jsf</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/pages/shoptrolley2.jsf</from-view-id>
        <navigation-case>
            <from-outcome>OK</from-outcome>
            <to-view-id>/pages/clientZone.jsf</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>ERROR</from-outcome>
            <to-view-id>/pages/shoptrolley2.jsf</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/pages/editProfile.jsf</from-view-id>
        <navigation-case>
            <from-outcome>OK</from-outcome>
            <to-view-id>/pages/clientZone.jsf</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>ERROR</from-outcome>
            <to-view-id>/pages/editProfile.jsf</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>LOGOUT</from-outcome>
            <to-view-id>/pages/index.jsf</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>UNREGISTER</from-outcome>
            <to-view-id>/pages/index.jsf</to-view-id>
        </navigation-case>
    </navigation-rule>
    <faces-config-extension>
        <facelets-processing>
            <file-extension>.xhtml</file-extension>
            <process-as>xhtml</process-as>
        </facelets-processing>
    </faces-config-extension>
</faces-config>